<% if (attempts && attempts.length > 0) { %>
  <div class="accordion" id="resultsAccordion">
    <% attempts.sort((a, b) => new Date(b.upload_date) - new Date(a.upload_date)).forEach((attempt, index) => { %>
      <div class="card mb-2">
        <div class="card-header p-2" id="heading<%= index %>" 
             style="cursor: pointer"
             data-toggle="collapse" 
             data-target="#collapse<%= index %>"
             aria-expanded="false"
             aria-controls="collapse<%= index %>">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <span class="badge badge-<%= attempt.images.filter(i => i.status === 'completed').length === attempt.images.length ? 'success' : 'warning' %> mr-2">
                <%= attempt.images.filter(i => i.status === 'completed').length %>/<%= attempt.images.length %> processed
              </span>
              <%= new Date(attempt.upload_date).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </div>
            <i class="fas fa-chevron-down transition-rotate"></i>
          </div>
        </div>
        
        <div id="collapse<%= index %>" 
             class="collapse"
             aria-labelledby="heading<%= index %>"
             data-parent="#resultsAccordion">
          <div class="card-body p-3">
            <div class="row">
              <% attempt.images.forEach(image => { %>
                <div class="col-md-4 mb-3">
                  <div class="card h-100">
                    <% if (process.env.INSTANCE_UNIX_SOCKET){
                      const getSignedUrl = require('/middleware/gcsimage');
                      let url; 
                      url = getSignedUrl(file_path); %>
                      <img src="<%= image.url %>" class="card-img-top" style="max-height: 200px; object-fit: cover;">
                    <% } else{%>
                    <img src="<%= image.file_path %>" class="card-img-top" style="max-height: 200px; object-fit: cover;">
                    <%} %>
                    <div class="card-body d-flex flex-column">
                      <% if (image.status === 'completed') { %>
                        <div class="mt-auto">
                          <span class="badge badge-success">
                            <%= image.corn_count %> corns
                          </span>
                          <small class="text-muted">
                            (<%= image.processing_time %>s processing)
                          </small>
                        </div>
                      <% } else { %>
                        <div class="mt-auto">
                          <span class="badge badge-<%= image.status === 'processing' ? 'info' : 'warning' %>">
                            <%= image.status %>
                          </span>
                          <% if (image.error) { %>
                            <p class="text-danger small mt-2"><%= image.error %></p>
                          <% } %>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info">No results found for this sector.</div>
<% } %>

<style>
  .card-header {
    background-color: #f8f9fa;
    transition: background-color 0.2s;
  }
  .card-header:hover {
    background-color: #e9ecef;
  }
  .transition-rotate {
    transition: transform 0.2s;
  }
  .collapsed .transition-rotate {
    transform: rotate(180deg);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Handle accordion toggle
    document.querySelectorAll('[data-toggle="collapse"]').forEach(trigger => {
      trigger.addEventListener('click', function() {
        const target = document.querySelector(this.dataset.target);
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        
        // Toggle chevron icon
        this.querySelector('i').classList.toggle('collapsed');
        
        // Close all others if needed
        if(!isExpanded) {
          document.querySelectorAll('.collapse.show').forEach(openCollapse => {
            if(openCollapse !== target) {
              openCollapse.classList.remove('show');
              const parentHeader = openCollapse.previousElementSibling;
              parentHeader.setAttribute('aria-expanded', 'false');
              parentHeader.querySelector('i').classList.add('collapsed');
            }
          });
        }
      });
    });
  });
</script>