<div class="sidebar">
  <h4 class="text-center text-white">Field AI</h4>
  <hr class="bg-white">
  
  <!-- Dashboard Dropdown Menu -->
  <a 
    href="#dashboardSubmenu" 
    class="text-white dropdown-toggle d-block <%= activePage === 'dashboard' ? 'active' : '' %>" 
    data-toggle="collapse" 
    aria-expanded="false" 
    aria-controls="dashboardSubmenu">
    Dashboard
  </a>
  <div class="collapse <%= activePage === 'dashboard' ? 'show' : '' %>" id="dashboardSubmenu">
    <a 
      href="/admin/dashboard?tab=users" 
      class="dropdown-item pl-4 <%= activePage === 'dashboard' && (!query.tab || query.tab === 'users') ? 'active' : '' %>">
      User List
    </a>
    <a 
      href="/admin/dashboard?tab=uploads" 
      class="dropdown-item pl-4 <%= activePage === 'dashboard' && query.tab === 'uploads' ? 'active' : '' %>">
      Upload Attempts
    </a>
  </div>

  <!-- Other Sidebar Items -->
  <a href="/admin/add-user" class="d-block text-white <%= activePage === 'add-user' ? 'active' : '' %>">Add Users</a>
  <a href="/logout" class="d-block text-danger">Logout</a>
</div>
