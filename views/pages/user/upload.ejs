<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/user/head') %>
    <title>Upload Images - FieldAI</title>
    <style>
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            padding: 15px 20px;
            display: block;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .sidebar a.active {
            background-color: #007bff;
            color: #fff;
        }
        .upload-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .preview-image {
            max-width: 150px;
            max-height: 150px;
            margin: 10px;
            border-radius: 5px;
            object-fit: cover;
        }
        .file-input-label {
            cursor: pointer;
            padding: 15px 30px;
            border: 2px dashed #007bff;
            border-radius: 5px;
            display: block;
            text-align: center;
            transition: all 0.3s ease;
        }
        .file-input-label:hover {
            background-color: #f8f9fa;
            border-color: #0056b3;
        }
    </style>
</head>
<body>
    <%- include('../../partials/user/sidebar') %>

    <div class="content">
        <div class="upload-container">
            <h3 class="mb-4">Upload Images for Sector <%= sectorId %></h3>
            
            <form action="/upload?sectorId=<%= sectorId %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="file" 
                           class="custom-file-input" 
                           id="imageInput" 
                           name="image" 
                           multiple
                           accept="image/*"
                           style="display: none;">
                    
                    <label for="imageInput" class="file-input-label">
                        <i class="fas fa-cloud-upload-alt fa-2x mb-2"></i>
                        <h5>Drag & Drop or Click to Upload</h5>
                        <p class="text-muted">Supported formats: JPG, PNG, JPEG</p>
                    </label>
                    
                    <div id="imagePreview" class="mt-3 d-flex flex-wrap"></div>
                </div>

                <div class="progress mb-3" style="height: 25px; display: none;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" 
                         role="progressbar" 
                         style="width: 0%">0%</div>
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-upload mr-2"></i>Upload Images
                </button>
            </form>

            <div class="mt-4">
                <a href="/user/dashboard" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <%- include('../../partials/user/scripts') %>
    <script>
        $(document).ready(function() {
            const imageInput = document.getElementById('imageInput');
            const previewContainer = document.getElementById('imagePreview');
            
            imageInput.addEventListener('change', function() {
                previewContainer.innerHTML = '';
                Array.from(this.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.className = 'preview-image';
                        img.src = e.target.result;
                        previewContainer.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            });
        });
    </script>
</body>
</html>