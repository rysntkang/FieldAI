  <%- include('../partials/header') %>

  <div class="container features">
    <h2 class="text-center">Features</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="feature-item text-center">
                <h4>Image Upload</h4>
                <p>Upload images of your cornfield easily and securely.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-item text-center">
