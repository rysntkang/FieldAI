<h2>Sector Dashboard</h2>

<div class="user-sectors-dashboard">
  <div class="add-sector-button">
    <button onclick="window.location.href='/sector/create'">Add Sector</button>
  </div>

  <table class="user-sectors-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Sector Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (sectors && sectors.length === 0) { %>
        <tr>
          <td colspan="4" class="no-sectors-message">
            No sectors found. Create your first sector!
          </td>
        </tr>
      <% } else { %>
        <!-- Iterate over user sectors -->
        <% sectors.forEach((sector, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= sector.sector_name %></td>
            <td><%= sector.description || '-' %></td>
            <td>
              <button class="view-btn" onclick="window.location.href='/sector/view/<%= sector.sector_id %>'">View</button>
              <button class="edit-btn" onclick="window.location.href='/sector/edit/<%= sector.sector_id %>'">Edit</button>
              <button class="delete-btn" onclick="deleteSector('<%= sector.sector_id %>')">Delete</button>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>