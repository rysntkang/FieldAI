<h2>Sector Dashboard</h2>

<% if (success && success.length > 0) { %>
  <div class="flash-message success">
    <p><%= success[0] %></p>
  </div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="flash-message error">
    <p><%= error[0] %></p>
  </div>
<% } %>

<div class="user-sectors-dashboard">
  <div class="user-sectors-top">
    <button id="addSectorBtn" class="btn btn-primary">Add Sector</button>
  </div>

  <table class="user-sectors-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Sector Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (sectors && sectors.length === 0) { %>
        <tr>
          <td colspan="4" class="no-sectors-message">
            No sectors found. Create your first sector!
          </td>
        </tr>
      <% } else { %>
        <% sectors.forEach((sector, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= sector.sector_name %></td>
            <td><%= sector.description || '-' %></td>
            <td>
              <button class="view-btn" onclick="window.location.href='/user/user-viewsector/<%= sector.sector_id %>'">View</button>
              <button class="edit-btn" data-sector-id="<%= sector.sector_id %>" onclick="editSector('<%= sector.sector_id %>')">Edit</button>
              <button class="delete-btn" data-sector-id="<%= sector.sector_id %>" onclick="deleteSector('<%= sector.sector_id %>')">Delete</button>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<div id="overlay" class="overlay" style="display: none;"></div>

<div id="addSectorModal" class="add-sector-container" style="display: none;">
  <h2>Add Sector</h2>
  <form id="addSectorForm" class="add-sector-form" method="POST" action="/add-sector">
    <div>
      <label for="sector_name">Sector Name:</label>
      <input type="text" id="sector_name" name="sector_name" placeholder="Enter sector name" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description" placeholder="Enter sector description" required></textarea>
    </div>
    <div class="add-sector-actions">
      <button type="submit">Save</button>
      <button type="button" id="closeAddModal" class="back-btn">Cancel</button>
    </div>
  </form>
</div>

<div id="editSectorModal" class="edit-sector-container" style="display: none;">
  <h2>Edit Sector</h2>
  <form id="editSectorForm" class="edit-sector-form" method="POST" action="/edit-sector">
    <div>
      <label for="sector_name">Sector Name:</label>
      <input type="text" id="sector_name" name="sector_name" placeholder="Edit sector name" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description" placeholder="Edit sector description" required></textarea>
    </div>
    <div class="edit-sector-actions">
      <button type="submit">Edit</button>
      <button type="button" id="closeEditModal" class="back-btn">Cancel</button>
    </div>
  </form>
</div>