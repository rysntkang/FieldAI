<h2>Batch Dashboard</h2>

<div class="user-batch-dashboard">
  <div class="user-batch-top">
    <!-- Button to start a new batch -->
    <button onclick="location.href='/user/add-batch/<%= sector.sector_id %>'" class="btn btn-primary">
      Start New Batch
    </button>
  </div>

  <table class="user-batch-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Batch Name</th>
        <th>Date Created</th>
        <th>Tassel Count</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (batches && batches.length === 0) { %>
        <!-- Display this row if no batches are found -->
        <tr>
          <td colspan="5" class="no-batch-message">
            No runs found.
          </td>
        </tr>
      <% } else { %>
        <!-- Loop through all batches and display them -->
        <% batches.forEach((batch, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= batch.name %></td>
            <td><%= batch.time_stamp %></td>
            <td><%= batch.total_tassel_count || 0 %></td> <!-- Ensure a fallback to 0 if undefined -->
            <td>
              <!-- Actions -->
              <button>Download</button>
              <form action="/user/delete-batch/<%= batch.batch_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this batch?');">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>
